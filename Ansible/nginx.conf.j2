{% set jenkins_host = hostvars[groups['jenkins'][0]].inventory_hostname %}

server {
    listen 80;
    server_name _;

    # Proxy a Jenkins
    location / {
        proxy_pass http://{{ jenkins_host }}:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header Connection "";
        proxy_buffering off;
        proxy_read_timeout 300;
    }

    # Proxy a SonarQube bajo /sonar/
    location /sonar/ {
        proxy_set_header X-Forwarded-Prefix /sonar;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header Host $host;
        proxy_read_timeout 300;
        # Mantener /sonar/ -> /sonar/ en upstream
        proxy_pass http://{{ jenkins_host }}:9000/sonar/;
        proxy_redirect off;
    }
}