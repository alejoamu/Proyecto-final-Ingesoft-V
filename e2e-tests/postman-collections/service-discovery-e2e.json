	"item": [
		{
			"name": "E2E Test 1: Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"E2E Test 1: Status code is 200\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
							"});",
							"pm.test(\"E2E Test 1: Response time is less than 3000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/actuator/health",
					"host": ["{{base_url}}"],
					"path": ["actuator", "health"]
				}
			}
		},
		{
