	"info": {
		"_postman_id": "api-gateway-e2e-collection",
		"name": "API Gateway E2E Tests",
		"description": "End-to-end tests for API Gateway using Postman/Newman - 5 E2E tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
