	"item": [
		{
			"name": "E2E Test 1: Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"E2E Test 1: Status code is 200\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
							"});",
							"pm.test(\"E2E Test 1: Response time is less than 3000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/actuator/health",
					"host": ["{{base_url}}"],
					"path": ["actuator", "health"]
				}
			}
		},
		{
			"name": "E2E Test 2: Route to Product Service",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"E2E Test 2: Status code is successful\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
							"});",
							"pm.test(\"E2E Test 2: Gateway routes to product service\", function () {",
							"    try {",
							"        var jsonData = pm.response.json();",
							"        pm.expect(jsonData).to.be.an('object');",
							"        if (jsonData.hasOwnProperty('collection')) {",
							"            pm.expect(jsonData.collection).to.be.an('array');",
							"        }",
							"    } catch (e) {",
							"        pm.expect.fail('Response is not valid JSON');",
							"    }",
							"});",
							"pm.test(\"E2E Test 2: Response time is acceptable\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/app/api/products",
					"host": ["{{base_url}}"],
					"path": ["app", "api", "products"]
				}
			}
		},
